#:kivy 1.0.9

<SdgBall>:
    size: 40, 40
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "media/_ball.png"

<SdgKeeper>:
    # size: 40, 40
    canvas:
        # Rectangle:
        #     pos: self.center_x + 280, root.top + 400
        #     source: "media/_goalkeeper.png"
        Rectangle:
            pos: self.center_x - 50, self.top
            size: 100, 120
            source: "media/_goalkeeper.png"
            # id: sdg_keeper

<SdgGoalpost>:
    size: 320, 44
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<SdgGame>:
    ball: sdg_ball
    keeper: sdg_keeper

    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            source: "media/_field.jpg"
            # pos: self.center_x - 5, 0
            # size: 10, self.height

        # Goalpost line
        Rectangle:
            pos: 0, self.center_y + 248
            size: self.width, 10

        # Penalty line
        Rectangle:
            pos: 0, self.center_y - 40
            size: self.width, 10

        # Penalty spot
        Ellipse:
            pos: self.center_x - 25, self.center_y - 247
            size: 50, 50

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
    SdgBall:
        id: sdg_ball
        # center: self.parent.center
        center_x: root.width * 1 / 2
        center_y: root.height * 1 / 7

    SdgGoalpost:
        id: sdg_goalpost
        y: root.height - self.height
        center_x: root.center_x
    
    SdgKeeper:
        id: sdg_keeper
        center: self.parent.center
        top: root.top - 140